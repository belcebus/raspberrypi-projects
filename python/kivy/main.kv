#:kivy 1.0.9

<PongBall>
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>
    size: 25,200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>
    ball: pong_ball

    canvas:
        Color: #000000

        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    Label:
        text: '0'
        font_size: 70
        center_x: root.width * 0.25
        top: root.top -50
    Label:
        text: '0'
        font_size: 70
        center_x: root.width * 0.75
        top: root.top -50
    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
